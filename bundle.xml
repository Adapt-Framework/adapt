<?xml version="1.0" encoding="utf-8"?>
<adapt_framework>
  <bundle>
    <label>Adapt Framework</label>
    <name>adapt</name>
    <version>1.0.0</version>
    <type>framework</type>
    <namespace>/frameworks/adapt</namespace>
    <description>Adapt framework is designed for rapid application and web deployment, built to scale it can meet the needs of the most demanding websites.</description>
    <copyright>2015 Adapt Framework</copyright>
    <license>MIT</license>
    <settings>
      <category name="XML &amp; HTML Settings">
        <setting>
          <name>xml.readable</name>
          <label>Output readable XML/HTML?</label>
          <default_value>No</default_value>
          <allowed_values>
            <value>Yes</value>
            <value>No</value>
          </allowed_values>
        </setting>
        <setting>
          <name>html.format</name>
          <label>HTML Format</label>
          <default_value>html5</default_value>
          <allowed_values>
            <value>html5</value>
            <value>xhtml</value>
          </allowed_values>
        </setting>
        <setting>
          <name>html.closed_tags</name>
          <label>Closed HTML tags</label>
          <default_values>
            <value>img</value>
            <value>link</value>
            <value>meta</value>
            <value>br</value>
            <value>hr</value>
            <value>area</value>
            <value>base</value>
            <value>col</value>
            <value>command</value>
            <value>embed</value>
            <value>input</value>
            <value>link</value>
            <value>meta</value>
            <value>param</value>
            <value>source</value>
          </default_values>
        </setting>
      </category>
      <category name="MySQL Settings">
        <setting>
          <name>mysql.default_engine</name>
          <label>Default storage engine</label>
          <default_value>InnoDB</default_value>
        </setting>
        <setting>
          <name>mysql.default_character_set</name>
          <label>Default character set</label>
          <default_value>utf8</default_value>
        </setting>
        <setting>
          <name>mysql.default_collation</name>
          <label>Default collation</label>
          <default_value>utf8_general_ci</default_value>
        </setting>
      </category>
      <category name="Database connecton">
        <setting>
          <name>data_source.driver</name>
          <label>Driver</label>
        </setting>
        <setting>
          <name>data_source.host</name>
          <label>Host</label>
        </setting>
        <setting>
          <name>data_source.schema</name>
          <label>Schema</label>
        </setting>
        <setting>
          <name>data_source.username</name>
          <label>Username</label>
        </setting>
        <setting>
          <name>data_source.password</name>
          <label>Password</label>
        </setting>
        <setting>
          <name>data_source.writable</name>
          <label>Writable?</label>
        </setting>
      </category>
      <category name="Applications">
        <setting>
          <name>adapt.default_application</name>
          <label>Which application should be booted?</label>
        </setting>
      </category>
      <category name="Repository settings">
        <setting>
          <name>repository.url</name>
          <label>Repoistory URL</label>
          <default_values>
            <value>http://repo.adaptframework.com</value>
          </default_values>
        </setting>
        <setting>
          <name>repository.username</name>
          <label>Repoistory Username</label>
          <default_values>
            <value></value>
          </default_values>
        </setting>
        <setting>
          <name>repository.password</name>
          <label>Repoistory Password</label>
          <default_values>
            <value></value>
          </default_values>
        </setting>
      </category>
      <category name="Caching">
        <setting>
          <name>adapt.sql_cache_expires_after</name>
          <label>How long should we hold results for SQL statements? (In seconds)</label>
          <default_value>60</default_value>
        </setting>
        <setting>
          <name>adapt.view_cache_expires_after</name>
          <label>How long should we cache views for? (In seconds)</label>
          <default_value>600</default_value>
        </setting>
        <setting>
          <name>adapt.page_cache_expires_after</name>
          <label>How long should we cache pages? (In seconds)</label>
          <default_value>300</default_value>
        </setting>
      </category>
    </settings>
    <schema_installed>Yes</schema_installed>
  </bundle>
</adapt_framework>
